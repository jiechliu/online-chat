{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": ".",
		"allowJs": true
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "dist"]
}
